<div class="age-gate row">
    <div class="col-md-6 col-md-offset-3">
        <form class="form-inline" role="form">
            <fieldset>
                <legend>You must be of legal drinking age to enter this site.</legend>
                <div class="form-group">
                    <select name="month" class="form-control">
                        <option value="">Month</option>
                        <% (1..12).each do |month| %>
                            <option <%= 'selected' if params[:month].to_i == month %>><%= month %></option>
                        <% end %>
                    </select>
                </div>

                <div class="form-group">
                    <select name="day" class="form-control">
                        <option value="">Day</option>
                        <% (1..31).each do |day| %>
                            <option <%= 'selected' if params[:day].to_i == day %>><%= day %></option>
                        <% end %>
                    </select>
                </div>

                <div class="form-group">
                    <select name="year" class="form-control">
                        <option value="">Year</option>
                        <% (1900..Date.today.year).each do |year| %>
                            <option <%= 'selected' if params[:year].to_i == year %>><%= year %></option>
                        <% end %>
                    </select>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Enter Site</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
